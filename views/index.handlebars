<h1>Eat Da Burger!</h1>

<h2>Burgers Available</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block sleep=true}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Create a burger:</label>
        <input type="text" id="createBurger" name="name">
    </div>

